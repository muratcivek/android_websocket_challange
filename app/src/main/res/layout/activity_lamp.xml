            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:gravity="center"
            android:text="Aydınlatma"
            android:textSize="22sp"
            android:textColor="@color/white"
            android:textStyle="bold"/>

        <ImageView
